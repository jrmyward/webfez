%header
  .masthead
    .container
      %nav.nav
        = link_to('Be a Shriner',
                  'https://www.beashrinernow.com',
                  class: 'nav-link pl-0',
                  target: '_blank')
        %span.nav-link.mx-0.px-0
          |
        = link_to('Our Hospital',
                  'https://www.shrinershospitalsforchildren.org/portland',
                  class: 'nav-link',
                  target: '_blank')
        %span.nav-link.mx-0.px-0
          |
        = link_to('Contact', contact_path(trailing_slash: true), class: 'nav-link')
        = link_to('https://www.facebook.com/alkadershriners',
                  class: 'nav-link nav-link--social ml-auto', target: '_blank') do
          = fa_icon('facebook-square')
        = link_to('https://plus.google.com/107320760460747810116',
                  class: 'nav-link nav-link--social', target: '_blank') do
          = fa_icon('google-plus-square')
        = link_to('https://twitter.com/alkader',
                  class: 'nav-link nav-link--social', target: '_blank') do
          = fa_icon('twitter-square')


  .masthead.masthead--brand
    .container.py-3
      .row
        .col-6.mx-auto
          = link_to root_path, class: 'brand', title: 'Al Kader Logo' do
            = image_tag('logo.png', alt: 'Al Kader logo', class: 'brand-logo')
  %nav.navbar.navbar-expand-md
    .container
      = link_to(root_path, class: 'navbar-brand w-75 d-md-none', title: 'Al Kader Logo') do
        = image_tag('logo.png', alt: 'Al Kader logo', class: 'img-fluid')
      = link_to('', class: 'navbar-toggler text-danger ml-auto',
        type: 'button',
        data: { toggle: 'collapse', target: '#primaryNav' },
        'aria-controls' => 'primaryNav',
        'aria-expanded' => 'false',
        'aria-label' => 'Toggle navigation') do
        %i.fa.fa-bars

      #primaryNav.navbar-collapse.collapse
        %ul.navbar-nav.flex-fill.justify-content-between
          %li.nav-item.btn-group.dropdown
            = link_to('About',
                      about_path(trailing_slash: true),
                      class: 'nav-link',
                      role: 'button')
            = link_to('', id: 'ddAbout',
                         class: 'nav-link dropdown-toggle dropdown-toggle-split',
                         aria: { expanded: false, haspopup: true },
                         data: { toggle: 'dropdown' },
                         role: 'button') do
              %span.sr-only Toggle Dropdown
            .dropdown-menu{'aria-lebelledby' => 'ddAbout'}
              = link_to('Al Kader Shriners',
                        about_path(trailing_slash: true),
                        class: 'dropdown-item')
              = link_to('Shriners International',
                        shriners_international_path(trailing_slash: true),
                        class: 'dropdown-item')
          %li.nav-item.btn-group.dropdown
            = link_to('Charity',
                      charity_path(trailing_slash: true),
                      class: 'nav-link',
                      role: 'button')
            = link_to('', id: 'ddCharity',
                         class: 'nav-link dropdown-toggle dropdown-toggle-split',
                         aria: { expanded: false, haspopup: true },
                         data: { toggle: 'dropdown' },
                         role: 'button') do
              %span.sr-only Toggle Dropdown
            .dropdown-menu{ 'aria-lebelledby' => 'ddCharity'}
              = link_to('Shriners Hospitals for Children',
                        charity_path(trailing_slash: true),
                        class: 'dropdown-item')
          %li.nav-item.btn-group.dropdown
            = link_to('Membership',
                      membership_path(trailing_slash: true),
                      class: 'nav-link',
                      role: 'button')
            = link_to('', id: 'ddMembership',
                         class: 'nav-link dropdown-toggle dropdown-toggle-split',
                         aria: { expanded: false, haspopup: true },
                         data: { toggle: 'dropdown' },
                         role: 'button') do
              %span.sr-only Toggle Dropdown
            .dropdown-menu{ 'aria-lebelledby' => 'ddMembership'}
              = link_to('Becoming a Shriner',
                        membership_path(trailing_slash: true),
                        class: 'dropdown-item')
              = link_to('Pay Your Dues',
                        'https://shrinetempledues.org/wfp/secure-authentication/?id=46',
                        class: 'dropdown-item')
          %li.nav-item
            = link_to('Events', events_path(trailing_slash: true), class: 'nav-link')
          %li.nav-item
            = link_to('Facility Rental',
                      facility_rental_path(trailing_slash: true),
                      class: 'nav-link')
          %li.nav-item
            = link_to('Order Shirts!',
                    'http://www.titanbiz.co/2019-shirts.htm',
                    class: 'nav-link btn btn-small btn-caution text-white',
                    target: '_blank')

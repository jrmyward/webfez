!!!
%html{:lang => 'en'}
  %head
    %meta{content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}/
    = render 'shared/head_meta'
    = yield(:meta)
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag    'application', 'data-turbolinks-track': 'reload'
    = yield(:head)
    - if Rails.env.production?
      / Google Tag Manager
      :javascript
        (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','GTM-5C43GW4');
      / End Google Tag Manager
  %body
    - if Rails.env.production?
      / Google Tag Manager (noscript)
      %noscript
        %iframe{height: "0", src: "https://www.googletagmanager.com/ns.html?id=GTM-5C43GW4", style: "display:none;visibility:hidden", width: "0"}
      / End Google Tag Manager (noscript)

    = render 'shared/navbar_public'
    %section.main.clearfix
      = render 'shared/alert_flash'
      = yield
    = render 'shared/footer'
